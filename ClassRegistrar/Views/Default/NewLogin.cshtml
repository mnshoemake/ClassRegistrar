@model ClassRegistrar.Models.LoginRequest

@{
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NewLogin</title>
</head>
<body>
